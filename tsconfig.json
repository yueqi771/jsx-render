{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "ESNext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/lib",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "src",
    "src/types"
, "index.d.ts"  ]
}